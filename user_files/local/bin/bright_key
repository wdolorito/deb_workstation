#!/bin/dash

#
# ~/local/bin/bright_key
#

CMD="brightnessctl"
DEV="smc::kbd_backlight"

if [ -z "$(which $CMD)" ]
then
  printf "install a package that supplies the \"%s\" utility\n" "$CMD"
  exit 127
fi

COMP="$(echo "$1" | tr '[:upper:]' '[:lower:]')"

case "$COMP" in
  "up")
    $CMD -qd $DEV  set +10%
    ;;
  "down")
    $CMD -qd $DEV set 10%-
    ;;
  *)
    ;;
esac

$CMD -d $DEV | sed -n 2p | awk '{print $4}' | tr -d "(%)"
exit 0
